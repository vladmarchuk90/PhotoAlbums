@model IEnumerable<NLayer.BLL.DTO.ProviderDTO>

@{
    ViewBag.Title = "Get providers by category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Get providers by category</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <input type="text" value="@ViewBag.Id" name="id" />
        <input type="submit" value="Get providers" />
    </p>
}

@if (Model != null && Model.Count() > 0)
{
    <div>
        <br />
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Region)
                </th>
            </tr>

            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelProduct => product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelProduct => product.Region)
                    </td>
                </tr>
            }
        </table>
    </div>
}
else if (Model != null && Model.Count() == 0)
{
    <p>There are not providers these supplied products by this category!</p>
}
